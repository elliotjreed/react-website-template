{
  "compilerOptions": {
    "baseUrl": ".",
    "paths": {
      "*": [
        "types/*"
      ]
    },
    "outDir": "./dist/",
    "sourceMap": true,
    "esModuleInterop": true,
    "noImplicitAny": false,
    "module": "esnext",
    "moduleResolution": "node",
    "target": "es5",
    "jsx": "react-jsx",
    "lib": [
      "es5",
      "es6",
      "dom",
      "esnext"
    ]
  },
  "include": [
    "./src/**/*.tsx",
    "./src/**/*.ts",
    "./tests/**/*.tsx",
    "./tests/**/*.js"
  ],
  "exclude": [
    "node_modules"
  ],
  "types": [
    "typePatches"
  ]
}
